{
  "data_sources": {
    "news_api": {
      "base_url": "https://newsapi.org/v2",
      "api_key": null,
      "default_language": "en",
      "default_page_size": 100
    },
    "esg_data": {
      "provider": "sample",
      "update_frequency": "quarterly"
    },
    "satellite_data": {
      "provider": "sample",
      "update_frequency": "weekly"
    },
    "financial_data": {
      "provider": "yfinance",
      "default_period": "1y"
    }
  },
  "models": {
    "sentiment_analysis": {
      "model_name": "ProsusAI/finbert",
      "use_cuda": true,
      "batch_size": 32
    },
    "esg_factor_model": {
      "standardize": true,
      "method": "ridge",
      "alpha": 1.0
    },
    "satellite_model": {
      "use_pca": true,
      "pca_variance_threshold": 0.95,
      "method": "random_forest"
    },
    "regime_detection": {
      "n_regimes": 2,
      "method": "markov"
    }
  },
  "validation": {
    "confidence_level": 0.95,
    "min_observations": 100,
    "cross_validation_folds": 5,
    "rolling_window_size": 252
  },
  "backtesting": {
    "lookback_period": "2y",
    "rebalance_frequency": "monthly",
    "transaction_costs": 0.001
  },
  "visualization": {
    "style": "plotly_white",
    "default_figsize": [12, 8],
    "save_plots": false,
    "plot_directory": "plots/"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "log_file": "alternative_data_analysis.log"
  }
}